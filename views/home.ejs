<script>
    const form = document.querySelector("form");
    const qelment = form.question;

    const questions = document.querySelectorAll(".question");
    const title = document.querySelectorAll(".title");
    const url = document.querySelectorAll(".url");
    const body = document.querySelectorAll(".statement");
    const loadingdiv = document.querySelectorAll(".loading");
    form.addEventListener('submit', async (e) => {
        e.preventDefault();
        const quest = qelment.value;
        loadingdiv.innerHTML = `<h3>Loading......</h3>`;
        for (i = 0; i < 5; i++) {
            title[i].innerHTML = ``;
            url[i].innerHTML = ``;
            url[i].href = ``;
            body[i].innerHTML = ``;
        }
        //fetch

        try {
            const res = await fetch(`/search?question=${quest}`, {
                method: "GET"
            });
            const data = await res.json();
            loadingdiv.innerHTML = ``;
            for (i = 0; i < 5; i++) {
                title[i].innerHTML = `<h3>${data[i].title}</h3>`;
                url[i].innerHTML = "Go to Codechef ";
                url[i].href = `${data[i].url}`;
                body[i].innerHTML = `${data[i].body}`;
            }
        } catch (error) {
            alert(error);
        }
    });
</script>
